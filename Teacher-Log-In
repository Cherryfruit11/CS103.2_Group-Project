#include <iostream>
#include <string>
using namespace std;

int main() 
{
    string username = "";
    string password = "";
    bool loginSucess = false;
    
    do
    {
        cout<<"Username: ";
        cin>>username;
        cout<<"\nPassword: ";
        cin>>password;

        if (username != "" || password != "Pass")
        {
            cout<<"Username or Password Incorrect"<<endl;
        }
        else
        {
            cout<<"Welcome "<<endl;
        }

    } while (username != "" && password != "Pass");

    do
    {
        char opt;
        int end;

        cout<<"\nParent/Student Information: P"; //more so contact info + option to add new child info
        cout<<"\nStudent Information: S"; //I'll put all the student stuff in this one
        cout<<"\nSign out / Exit: X";
        cout<<"\nEnter Option: ";
        cin>>opt;

        switch (opt)
        {
        case 'P':
        {
            int P = 0;
            do
            {
                cout<<"\nParent Contact Information: C";
                cout<<"\nAdd Student Information: A";
                cout<<"\nReturn: X";
                cout<<"\nEnter Option: ";
                cin>>opt;

                switch (opt)
                {
                case 'C':
                {
                    cout<<"\nwhich Parent to students and their contact information";
                    cout<<"\nMaybe some more options to pick from as well";
                    break;
                }
                case 'A':
                {
                    cout<<"\ndefinitely another do/while thing";
                    break;
                }
                default:
                {
                    cout<<"\n:Option invalid: Please understand that Options are Case Sensitive.";
                    break;
                }
                }
            } while (P != 1);
            break;
        }
        case 'S':
        {
            
            break;
        }
        case 'X'
        {
            cout<<"Logging out";
            end = 1;
            break;
        }
        default:
        {
            cout<<"\nPlease pick from the Available Options\n";
            break;
        }
        }
    } while (end != 1);
}
