void adminLogin()
{
	string username = "";
	string password = "";
	bool loginSuccess = false;
	int attempts = 0;
	char opt = 0;

	do
	{
		cout << "***********************************************************************\n\n\n";
		cout << "                      Welcome To The School System              \n\n";
		cout << "************************  Admin Log-In **************************\n\n";

		cout << "\nUsername: ";
		cin >> username;
		cout << "\nPassword: ";
		cin >> password;

		if (password == "123" || username == "user") //set ID password
		{//admin options portal
			cout << "\nSucessful Login, Welcome Admin\n";
		 	break;
	 	}
		else
		{
			cout << "\n\nIncorrect Username or Password, please try again\n\n"; //function works
			attempts++;
			system("pause");
			system("cls"); 
		      
		}

	} while (loginSuccess != false|| attempts != 3);

	if (attempts == 3 && loginSuccess != true) 
	{
		cout << "\n\nYou have entered the wrong user details too many times\n\n";
		system("pause"); 
		main();
	}
	else {
		cout << "";
	}
}



