#include <iostream>
#include <string>
using namespace std;

int main()   
{
    string username = "";
    string password = "";
    bool loginSucess = false;
    
    do
    {
        cout<<"Username: ";
        cin>>username;
        cout<<"\nPassword: ";
        cin>>password;

        if (username != "Admin" || password != "Pass")
        {
            cout<<"Username or Password Incorrect"<<endl;
        }
        else
        {
            cout<<"Welcome Admin"<<endl;
        }

    } while (username != "Admin" && password != "Pass");
    
    do
    {
        char opt;

        cout<<"\nstuff: S";
        cout<<"\nLog-out: X"
        cout<<"\nEnter Option: ";
        cin>>opt;

        switch (opt)
        {
        case 'S':
        {
            cout<<"stuff";
            break;
        }
        case 'e'
        {
            cout<<"exit"
            break;
        }
        default:
        {
            cout<<"\nPlease pick from the Available Options\n";
            break;
        }
        }
    } while (char != 'e');
    



}
