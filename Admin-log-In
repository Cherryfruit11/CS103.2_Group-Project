void adminLogin()
{
	string username = "";
	string password = "";
	bool loginSuccess = false;
	int attempts = 0;

	do
	{
		cout << "***********************************************************************\n\n\n";
		cout << "                      Welcome To The School System              \n\n";
		cout << "************************  Admin Log-In **************************\n\n";
		
		cout << "\nUsername: ";
		cin >> username;
		cout << "\nPassword: ";
		cin >> password;

		if (password == "123" || username == "user") //set ID password
		{
			cout << "\nSucessful Login, Welcome Admin\n";
			loginSuccess = true;
		}
		else
		{
			cout << "\nIncorrect Username or Password, please try again\n";
			attempts++
		}

	} while (loginSuccess != true || attempts != 3);

	if(attempts == 3 && loginSuccess != true)
	{
		cout << "You have entered the wrong user details too many times";
		system("cls");
		main();
	}
	else {
		cout << "Welcome Admin";
	}
}
