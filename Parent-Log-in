#include <iostream>
#include <string>
using namespace std;

int main() 
{
    string username = "";
    string password = "";
    bool loginSucess = false;
    
    do
    {
        cout<<"Username: ";
        cin>>username;
        cout<<"\nPassword: ";
        cin>>password;

        if (username != "" || password != "Pass")
        {
            cout<<"Username or Password Incorrect"<<endl;
        }
        else
        {
            cout<<"Welcome "<<endl;
        }

    } while (username != "" && password != "Pass");
    
    do
    {
        char opt;

        cout<<"list of options: opt\n"; //however many options we'll have
        cout<<"Enter Option: ";
        cin>>opt;

        switch (opt)
        {
        case 's':
        {
            cout<<"stuff"
            break;
        }
        case 'e'
        {
            cout<<"exit"
            break;
        }
        default:
        {
            cout<<"\nPlease pick from the Available Options\n";
            break;
        }
        }
    } while (char != 'e');
}